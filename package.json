{
    "name": "dafny-vscode-preview",
    "displayName": "Dafny (Preview)",
    "description": "Dafny for Visual Studio Code (Preview Release)",
    "version": "1.0.3",
    "publisher": "correctnessLab",
    "homepage": "https://github.com/DafnyVSCode/",
    "repository": {
        "type": "git",
        "url": "https://github.com/DafnyVSCode/ide-vscode.git"
    },
    "bugs": {
        "url": "https://github.com/DafnyVSCode/ide-vscode/issues"
    },
    "qna": false,
    "license": "MIT",
    "galleryBanner": {
        "color": "#FFEC50",
        "theme": "light"
    },
    "icon": "logo.png",
    "engines": {
        "vscode": "^1.25.1"
    },
    "keybindings": [
      {
        "command": "dafny.compile",
        "key": "ctrl+shift+b",
        "mac": "⇧⌘B",
        "when": "editorTextFocus && editorLangId == dafny"
      },
      {
        "command": "dafny.compileAndRun",
        "key": "f5",
        "mac": "f5",
        "when": "editorTextFocus && editorLangId == dafny"
      },
      {
        "command": "dafny.compileCustomArgs",
        "key": "f6",
        "mac": "f6",
        "when": "editorTextFocus && editorLangId == dafny"
      },
      {
        "command": "dafny.showCounterExample",
        "key": "f7",
        "when": "editorTextFocus && editorLangId == dafny"
      },
      {
        "command": "dafny.hideCounterExample",
        "key": "f8",
        "when": "editorTextFocus && editorLangId == dafny"
      },
      {
        "command": "dafny.restartDafnyServer",
        "key": "f9",
        "when": "editorTextFocus && editorLangId == dafny"
      }
    ],
    "snippets": [
      {
        "language": "dafny",
        "path": "./snippets/dafny.json"
      }
    ],
    "languages": [
      {
        "id": "dafny",
        "aliases": [
          "Dafny",
          "dafny"
        ],
        "extensions": [
          ".dfy",
          ".dfyi"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "scripts": {
        "vscode:compile-typescript": "tsc -p ./",
        "build": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "package": "vsce package --out dist/",
        "publish": "vsce publish",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "update-vscode": "node ./node_modules/vscode/bin/install"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.32",
        "@types/node": "^6.14.9",
        "mocha": "^5.2.0",
        "tslint": "^5.20.1",
        "typescript": "^3.6.4",
        "vsce": "^1.75.0",
        "vscode": "^1.1.36"
    },
    "commands": [
      {
        "command": "dafny.restartDafnyServer",
        "icon": "$(issue-reopened)",
        "title": "Dafny: Restart DafnyServer"
      },
      {
        "command": "dafny.compile",
        "title": "Dafny: Compile"
      },
      {
        "command": "dafny.compileCustomArgs",
        "title": "Dafny: Compile with Custom Arguments"
      },
      {
        "command": "dafny.compileAndRun",
        "title": "Dafny: Compile and Run"
      },
      {
        "command": "dafny.showCounterExample",
        "title": "Dafny: Show CounterExample"
      },
      {
        "command": "dafny.hideCounterExample",
        "title": "Dafny: Hide CounterExample"
      }
    ]
  },
  "activationEvents": [
    "onLanguage:dafny"
  ],
  "scripts": {
    "vscode:compile-typescript": "tsc -p ./",
    "compile": "tsc -watch -p ./",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "update-vscode": "node ./node_modules/vscode/bin/install"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.14.10",
    "mocha": "^5.2.0",
    "tslint": "^5.20.1",
    "typescript": "^3.9.2",
    "vsce": "^1.75.0",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "vscode-languageclient": "^3.5.1"
  }
}
